    <a href="/" class="btn btn-primary me-2"
      ><i class="bi bi-house me-2"></i>Início</a
    >
    <a href="/carreiras" class="btn btn-dark"
      ><i class="bi bi-suitcase-lg me-2"></i>Carreiras</a
    >
  </div>
