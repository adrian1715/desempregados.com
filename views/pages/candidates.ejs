<%- layout('../layouts/boilerplate.ejs') %>

<main class="container py-5">
  <%- include('../partials/flash') %>

  <h1 class="mb-3">Candidatos</h1>

  <% if (candidates.length === 0) { %>
  <div class="alert alert-info">Nenhum candidato registrado.</div>
  <% } else { %>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 g-3">
    <% candidates.forEach((candidate) => { %>
    <div class="col">
      <div class="card h-100 shadow-sm">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title mb-2">
            <%= truncateToLastWord(candidate.name.first + " " +
            candidate.name.last, 30) %>
          </h5>
          <div class="mt-auto">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span class="col-auto badge bg-secondary"
                ><i class="bi bi-telephone me-1"></i><%= candidate.phone
                %></span
              >
              <span
                class="col-auto badge bg-success"
                title="<%= emails[candidates.indexOf(candidate)].email %>"
                ><i class="bi bi-envelope-at me-1"></i><%=
                truncateToLastWord(emails[candidates.indexOf(candidate)].email,
                12) %></span
              >
            </div>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span class="col-auto badge bg-info text-dark">
                <i class="bi bi-geo-alt me-1"></i>
                <%= candidate.location.city %>, <%=
                formatState(candidate.location.state, 1) %>
              </span>

              <span class="col-auto badge bg-primary">
                <i class="bi bi-file-earmark-person me-1"></i>
                <%= (candidate.appliedJobs && candidate.appliedJobs.length) || 0
                %> candidaturas
              </span>
            </div>

            <div class="d-flex justify-content-between align-items-center">
              <a
                href="/candidatos/<%= candidate._id %>"
                class="btn btn-sm btn-outline-primary"
                ><i class="bi bi-file-earmark-medical me-1"></i>Ver candidato</a
              >
              <small class="text-muted"
                ><%= candidate.createdAt ? new
                Date(candidate.createdAt).toLocaleDateString('pt-BR') : ''
                %></small
              >
            </div>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
  <% } %>
</main>
