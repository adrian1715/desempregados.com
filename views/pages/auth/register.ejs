<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cadastrar - Desempregados</title>
    <link
      rel="icon"
      href="https://contmoura.com.br/wp-content/uploads/2020/04/carteira-de-trabalho-png-6.png"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/auth.css" />

    <style>
      body {
        background-image: url("https://img.freepik.com/premium-photo/portrait-cheerful-young-man-smiling-while-looking-camera-throwing-up-his-hands-sides-from-ignorance-white-background-with-place-advertising-mockup_324489-4416.jpg?w=2000");
      }
    </style>

    <link rel="stylesheet" href="/bootstrap/icons/bootstrap-icons.css" />
  </head>

  <body>
    <main class="container d-flex justify-content-center">
      <div id="form-container" class="bg-light border rounded px-4 pt-3 pb-4">
        <h1 class="mb-3">Cadastrar</h1>
        <div id="buttons-row" class="row px-3 py-4 mb-3 justify-content-center">
          <button
            type=""
            class="option-btn d-flex col-12 col-md-5 btn btn-outline-dark border rounded justify-content-center align-items-center px-3 py-1 me-md-3 mb-3 mb-md-0"
          >
            <i class="bi bi-buildings"></i>
            <span class="ms-2 px-1 fs-5">Empresa</span>
          </button>
          <button
            type=""
            class="option-btn d-flex col-12 col-md-5 btn btn-outline-secondary border rounded justify-content-center align-items-center px-4 py-1 ms-md-3"
          >
            <i class="bi bi-person-fill"></i>
            <span class="ms-1 fs-5">Funcionário</span>
          </button>
        </div>
        <a href="/login" class="text-decoration-none ms-1">Voltar ao login</a>

        <!-- ---------------------------------------------------------- -->

        <form action="" id="company-form" style="display: none"></form>

        <form
          action="controller/cadastrar-usuario.php"
          method="POST"
          id="employee-form"
          style="display: none"
        >
          <div class="input-group">
            <div class="input-group-text">
              <i class="bi bi-person-fill"></i>
            </div>
            <input
              type="text"
              name="username"
              placeholder="Username"
              class="form-control"
            />
          </div>

          <div class="input-group mt-2">
            <div class="input-group-text">
              <i class="bi bi-envelope-at-fill"></i>
            </div>
            <input
              type="email"
              name="email"
              placeholder="E-mail"
              class="form-control"
            />
          </div>

          <div class="input-group mt-2">
            <div class="input-group-text">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-lock-fill"
                viewBox="0 0 16 16"
              >
                <path
                  d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"
                />
              </svg>
            </div>
            <input
              type="password"
              name="password"
              placeholder="Password"
              class="form-control"
            />
          </div>

          <div class="row mt-3">
            <a href=""
              ><button type="submit" class="btn btn-outline-dark col-12">
                Criar conta
              </button></a
            >
          </div>

          <!-- criar botão de voltar (seleção de empresa ou funcionário) -->
        </form>
      </div>
    </main>
    <%- include('../../partials/footer.ejs') %>
    <script>
      const btn = document.getElementsByClassName("option-btn")[0];
      const btn2 = document.getElementsByClassName("option-btn")[1];
      const row = document.getElementById("buttons-row");
      const form1 = document.querySelector("#employee-form");

      btn.addEventListener("click", (e) => {
        e.preventDefault();
        row.style.display = "none";
        form1.style.display = "block";
        console.log(`button 1 has been clicked!`);
      });

      btn2.addEventListener("click", (e) => {
        e.preventDefault();
        // console.log(`${btn2} has been clicked!`);
      });
    </script>
  </body>
</html>
